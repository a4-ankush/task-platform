# Server
PORT=4000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Mongo
MONGODB_URI=mongodb://localhost:27017/task_platform

# Optional: set to true to run with mongodb-memory-server (no local Mongo needed)
USE_IN_MEMORY_MONGO=false

# JWT
JWT_ACCESS_SECRET=replace-with-strong-secret-min-16
JWT_REFRESH_SECRET=replace-with-strong-secret-min-16
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Security
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=120

# Password reset (in real prod, email provider)
PASSWORD_RESET_TOKEN_TTL_MIN=30
APP_BASE_URL=http://localhost:3000
